<div x-data="{ open: false }" class="relative bg-gradient-to-r from-primary-500 to-primary-700">
 <!-- Mobile Navigation -->
<div class="flex md:hidden items-center justify-between px-sm py-sm">
    <!-- Burger Menu Icon -->
    <button @click="open = !open" class="flex items-center">
        <!-- Burger Menu Icon (visible when open is false) -->
        <svg x-show="!open" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-8 w-8 text-white">
            <path d="M3 12h18m-18-6h18m-18 12h18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    
        <!-- Close (X) Icon (visible when open is true) -->
        <svg x-show="open" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-8 w-8 text-white">
            <path d="M6 18L18 6M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </button>

    <!-- Logo -->
    <img src="../svg/logo.svg" alt="Logo" class="h-10 mx-auto">

    <!-- Cart Icon -->
    <img src="../svg/cart.svg" alt="Cart" class="h-8">
</div>

<!-- Overlay and Dropdown Menu -->
<div 
    x-show="open" 
    class="absolute inset-x-0 top-xl bg-black bg-opacity-50 z-40" 
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
>
