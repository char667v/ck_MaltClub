      <!-- Venstre side med billede -->
      <div class="flex items-center justify-center">
        <div class="relative md:w-[510px] md:h-[500px] w-full h-auto md:-ml-xs">
          <!-- Billede (Skjules på mobil, vises på større skærme) -->
